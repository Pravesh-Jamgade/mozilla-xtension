{
	"manifest_version": 2,
	"name": "Boderify",
	"version": "1.0",

	"description": "Adds a red border to all webpages matching mozilla.org",

	"icons":{
		"48":"icons/icon-48.png",
		"96":"icons/icon-96.png"
	},
	
	"content_scripts":[
		{
			"matches": ["*://*.mozilla.org/*"],
			"js": ["borderify.js"]
		}		
	],
	
	"applications":{
		"gecko":{
			"id": "praveshjamgade@gmail.com"
		}
	}

}
